// Sourced from https://github.com/trond-snekvik/vscode-rst/blob/main/rst-configuration.json
{
  "comments": {
    "lineComment": ".."
  },
  "brackets": [
    ["(", ")"],
    ["<", ">"],
    ["[", "]"]
  ],
  "surroundingPairs": [
    ["(", ")"],
    ["<", ">"],
    ["`", "`"],
    ["*", "*"],
    ["|", "|"],
    ["[", "]"]
  ],
  // "autoClosingPairs": [
  // 	{ "open": "(", "close": ")" },
  // 	{ "open": "<", "close": ">" },
  // 	{ "open": "'", "close": "'"},
  // 	{ "open": "`", "close": "`", "notIn": ["string"]},
  // 	{ "open": "\"", "close": "\""},
  // 	{ "open": "[", "close": "]"}
  //       ],
  // "autoCloseBefore": ":})>`\\n ",
  "onEnterRules": [
    {
      "beforeText": "^\\s*\\.\\. *$|(?<!:)::(\\s|$)",
      "action": { "indent": "indent" }
    }
  ],
  // "wordPattern": "[\\w-]*\\w[\\w-]*"

  // Agda specific
  "autoClosingPairs": [
    {
      "open": "\"",
      "close": "\"",
      "notIn": ["comment", "string"]
    },
    {
      "open": "{!",
      "close": "!}",
      "notIn": ["comment", "string"]
    },
    {
      "open": "{-#",
      "close": "#-}",
      "notIn": ["comment", "string"]
    },
    {
      "open": "⦃",
      "close": "⦄",
      "notIn": ["comment", "string"]
    },
    {
      "open": "⦇",
      "close": "⦈",
      "notIn": ["comment", "string"]
    }
  ],
  "wordPattern": "(?!\\\\)[^\\s\\n\\.\\;\\{\\}\\(\\)\\@\\\"]+"
}
