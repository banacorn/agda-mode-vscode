{
    "comments": {
        "lineComment": "--",
        "blockComment": ["{-", "-}"]
    },
    "brackets": [
        ["(", ")"]
        ["{", "}"],
        ["{!", "!}"],
        ["{-#", "#-}"],
    ],
    "autoClosingPairs": [
        {
          "open": "\"",
          "close": "\"",
          "notIn": ["string"]
        },
        {
          "open": "{!",
          "close": "!}"
        },
        {
          "open": "{-#",
          "close": "#-}",
          "notIn": ["comment"]
            
        },
        {
          "open": "⦃",
          "close": "⦄"
        }
    ],
    "surroundingPairs": [
        ["(", ")"],
        ["{", "}"],
        ["[", "]"],
        ["\"", "\""],
        ["'", "'"]
        ["{!", "!}"],
        ["{-#", "#-}"],
        ["{{", "}}"],
        ["⦃", "⦄"],
    ],
}
